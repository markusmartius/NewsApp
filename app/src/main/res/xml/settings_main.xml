<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />

    <ListPreference
        android:defaultValue="@string/settings_news_type_by_default"
        android:entries="@array/settings_news_labels"
        android:entryValues="@array/settings_news_types"
        android:key="@string/settings_news_type_by_key"
        android:title="@string/settings_news_type_label" />

</PreferenceScreen>